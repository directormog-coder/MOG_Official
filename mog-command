    <script>
        const SUPABASE_URL = 'YOUR_SUPABASE_URL';
        const SUPABASE_KEY = 'YOUR_SUPABASE_ANON_KEY';
        const ADMIN_EMAIL = 'director.mog@gmail.com';
        const supabase = window.supabase.createClient(SUPABASE_URL, SUPABASE_KEY);

        let currentUser = null;

        async function runRitual() {
            const container = document.getElementById('terminal-log');
            const lines = ["> INITIALIZING M.O.G. CORE...", "> DOMAIN: ministryofgroove.com", "> CLEARANCE: DIRECTOR", "> WELCOME TO THE GROOVE."];
            for(let log of lines) {
                const line = document.createElement('div'); line.className = 'terminal-text'; line.innerText = log;
                container.appendChild(line); await new Promise(r => setTimeout(r, 350));
            }
            setTimeout(() => { document.getElementById('ritual-overlay').style.opacity = '0'; document.getElementById('ritual-overlay').style.pointerEvents = 'none'; }, 1000);
        }

        supabase.auth.onAuthStateChange(async (event, session) => {
            currentUser = session?.user || null;
            if(currentUser) {
                document.getElementById('reg-form').classList.add('hidden');
                document.getElementById('reg-auth-status').classList.remove('hidden');
                document.getElementById('user-display-email').innerText = currentUser.email;
            }
        });

        function showView(id) {
            document.querySelectorAll('section').forEach(s => s.style.display = 'none');
            document.getElementById('view-' + id).style.display = 'block';
        }

        async function loginWithGoogle() { 
            await supabase.auth.signInWithOAuth({ provider: 'google', options: { redirectTo: window.location.origin } }); 
        }

        async function adminAccessCheck() {
            if (currentUser?.email === ADMIN_EMAIL) { showView('admin'); loadAdminData(); } 
            else { alert("Director Clearance Required."); }
        }

        function toggleTheme() {
            const t = document.documentElement.getAttribute('data-theme') === 'dark' ? 'light' : 'dark';
            document.documentElement.setAttribute('data-theme', t);
        }

        window.onload = runRitual;
    </script>
